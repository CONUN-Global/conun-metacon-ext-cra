{
  "name": "Metacon",
  "description": "Metacon extension",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "conun-logo.svg",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://localhost/*"]
  },
  "permissions": ["activeTab", "storage", "tabs"]
}
